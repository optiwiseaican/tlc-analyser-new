<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddUsers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/drwr_dim_ham"
            android:layout_height="@dimen/drwr_dim_ham"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="Add Users"
                android:textColor="@color/blueColor"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/saveData"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_bc"
            android:text="Save"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btnUserDatabase"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:src="@drawable/ic_users" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:gravity="end"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkAddMultiUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Add multiple users?"
                    android:textColor="@color/blueColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:id="@+id/overlapImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:src="@drawable/tlc_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:gravity="center"
                android:text="Add Users"
                android:textColor="@color/blueColor"
                android:textSize="24dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="100dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:id="@+id/subjectLL"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:layout_marginStart="23dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="23dp"
                                    android:background="@drawable/buttonlayout2"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    tools:ignore="UselessParent">


                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="30dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="Name"
                                        android:textColor="@color/blueColor"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/username"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/edittext_bc"
                                        android:gravity="center_vertical"
                                        android:hint="Enter name"
                                        android:imeOptions="actionNext"
                                        android:nextFocusForward="@+id/userid"
                                        android:paddingStart="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingEnd="10dp"
                                        android:paddingBottom="10dp"
                                        android:textColor="@color/blueColor"
                                        android:textSize="16dp">

                                        <requestFocus />
                                    </EditText>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="30dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="User ID"
                                        android:textColor="@color/blueColor"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/userid"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/edittext_bc"
                                        android:gravity="center_vertical"
                                        android:hint="Enter user id"
                                        android:imeOptions="actionNext"
                                        android:nextFocusForward="@+id/userpasscode"
                                        android:paddingStart="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingEnd="10dp"
                                        android:paddingBottom="10dp"
                                        android:textColor="@color/blueColor"
                                        android:textSize="16dp">


                                        <requestFocus />
                                    </EditText>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="30dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="Password"
                                        android:textColor="@color/blueColor"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/userpasscode"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/edittext_bc"
                                        android:gravity="center_vertical"
                                        android:hint="Enter password"
                                        android:inputType="textPassword"
                                        android:paddingStart="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingEnd="10dp"
                                        android:paddingBottom="10dp"
                                        android:textColor="@color/blueColor"
                                        android:textSize="16dp" />

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="100dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:text="User can access"
                                android:textColor="@color/blueColor"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:orientation="vertical">

                                <CheckBox
                                    android:id="@+id/reportGenerationBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Report Generation"
                                    android:textColor="@color/blueColor"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <CheckBox
                                    android:id="@+id/projectCreationBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Project Creation"
                                    android:textColor="@color/blueColor"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />


                                <CheckBox
                                    android:id="@+id/userCreationBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="User Creation"
                                    android:textColor="@color/blueColor"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:text="Recently added users"
                                android:textColor="@color/blueColor"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TableLayout
                                android:id="@+id/tableLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="0dp"
                                android:layout_weight="1"
                                android:stretchColumns="1,2,3,4,5">

                                <TableRow tools:ignore="UselessParent">

                                    <TextView
                                        android:id="@+id/user_role"
                                        android:layout_column="1"
                                        android:padding="10dp"
                                        android:text="Username"
                                        android:textColor="#303030"
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/user_name"
                                        android:layout_column="1"
                                        android:padding="10dp"
                                        android:text="User Role"
                                        android:textColor="#303030"
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/dateCreated"
                                        android:layout_column="1"
                                        android:padding="10dp"
                                        android:text="Date Created"
                                        android:textColor="#303030"
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/expiry_date"
                                        android:layout_column="1"
                                        android:padding="10dp"
                                        android:text="Expiry Date"
                                        android:textColor="#303030"
                                        android:textSize="14dp"
                                        android:textStyle="bold" />


                                </TableRow>

                            </TableLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="0dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/recently_user_added" />


                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/assignRole"
                android:layout_width="450dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_bc"
                android:text="Assign Role"
                android:textSize="20dp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
